<Grid
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MetoCraft.Sett"
             xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="MetoCraft.Sett.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="369" d:DesignWidth="537" Loaded="PGrid_Loaded">
    <Grid.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MetoCraft;component/ControlStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Grid.Resources>
    <Grid Margin="0" Background="#7FFFFFFF">
        <Label x:Name="lblLangTitle" Content="{DynamicResource Language}" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16"/>
        <ComboBox x:Name="listLang" HorizontalAlignment="Left" Margin="0,30,0,0" VerticalAlignment="Top" Width="300" Background="White" BorderBrush="Black" SelectionChanged="listLang_SelectionChanged" ItemsPanel="{DynamicResource ItemsPanelTemplate1}" ItemContainerStyle="{DynamicResource ComboBoxItemStyle1}" Template="{DynamicResource ComboBoxControlTemplate1}" Height="25" BorderThickness="2"/>
        <Label x:Name="lblDLUrl" Content="{DynamicResource DLSrc}" HorizontalAlignment="Left" Margin="0,55,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboDLSrc" HorizontalAlignment="Left" Margin="0,80,0,0" VerticalAlignment="Top" Width="300" Template="{DynamicResource ComboBoxControlTemplate1}" SelectionChanged="comboDLSrc_SelectionChanged">
            <ComboBoxItem Content="Offical"/>
            <ComboBoxItem Content="BMCLAPI"/>
            <ComboBoxItem Content="RapidData"/>
        </ComboBox>
    </Grid>
</Grid>