<Grid
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MetoCraft"
             xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="MetoCraft.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="719" d:DesignWidth="792" Loaded="PGrid_Loaded">
    <Grid.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MetoCraft;component/ControlStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Grid.Resources>

    <Grid>
        <Grid Background="Gray" HorizontalAlignment="Left" Width="200"/>
        <Grid Margin="200,0,0,0" Background="White">
            <Label x:Name="lblLangTitle" Content="{DynamicResource Language}" HorizontalAlignment="Left" Margin="30,25,0,0" VerticalAlignment="Top" FontSize="16"/>
            <Label x:Name="lblOLang" Content="{DynamicResource OfDL}" HorizontalAlignment="Left" Margin="30,60,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="lblOLangDesc" HorizontalAlignment="Left" Height="37" Margin="50,85,0,0" TextWrapping="Wrap" Text="{DynamicResource OfDLDesc}" VerticalAlignment="Top" Width="512" IsEnabled="False" BorderBrush="{x:Null}" Background="{x:Null}" SelectionBrush="{x:Null}" Foreground="Black" Padding="2,4,0,0" VerticalScrollBarVisibility="Disabled" Template="{DynamicResource TextBoxControlTemplate}"/>
            <ComboBox x:Name="listLang" HorizontalAlignment="Left" Margin="50,127,0,0" VerticalAlignment="Top" Width="300" Background="White" BorderBrush="Black" SelectionChanged="listLang_SelectionChanged" ItemsPanel="{DynamicResource ItemsPanelTemplate1}" ItemContainerStyle="{DynamicResource ComboBoxItemStyle1}" Template="{DynamicResource ComboBoxControlTemplate1}" Height="25.488" BorderThickness="2"/>
            <Label x:Name="lblDLUrl" Content="{DynamicResource DLSrc}" HorizontalAlignment="Left" Margin="30,157,0,0" VerticalAlignment="Top"/>
            <ComboBox x:Name="comboDLSrc" HorizontalAlignment="Left" Margin="50,182,0,0" VerticalAlignment="Top" Width="300" Template="{DynamicResource ComboBoxControlTemplate1}" SelectionChanged="comboDLSrc_SelectionChanged">
                <ComboBoxItem Content="Offical"/>
                <ComboBoxItem Content="BMCLAPI"/>
                <ComboBoxItem Content="RapidData"/>
            </ComboBox>
        </Grid>

    </Grid>
</Grid>