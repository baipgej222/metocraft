<Button x:Class="MTMCL.Task.TaskListBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MTMCL.Task"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="645" Loaded="UserControl_Loaded" BorderThickness="1"  Background="{Binding ImgSrc, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}" Padding="0">
    <Grid Margin="0" Width="645" Height="75">
        <Label x:Name="lblTaskName" Margin="0,0,250,0" FontSize="13.333" FontWeight="Bold">
            <AccessText Text="{Binding TaskName,RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}" FontSize="21.333" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"/>
        </Label>
        <Label x:Name="lblTaskStatus" Content="{Binding TaskStatus,RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}" Margin="320,30,0,0" HorizontalContentAlignment="Right" FontSize="18.667" FontWeight="Bold"/>
    </Grid>
</Button>
