<Window x:Class="MetoCraft.MCCrash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetoCraft"
        mc:Ignorable="d"
        Title="Crash Report" Height="400" Width="500">
    <Grid>
        <Grid Height="45" VerticalAlignment="Top">
            <Label x:Name="lbl1" Content="Uhoh, it looks like the game has crashed! Sorry for the inconvenience :(" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"/>
            <Button x:Name="button" Content="Open Report" HorizontalAlignment="Left" Margin="0,25,0,0" VerticalAlignment="Top" Width="75"/>
        </Grid>
        <ScrollViewer Margin="0,45,0,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBlock x:Name="txtContent" TextWrapping="Wrap" Text=""/>
        </ScrollViewer>

    </Grid>
</Window>
