<Window x:Class="MetoCraft.NewGui.TaskGui"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetoCraft.NewGui"
        mc:Ignorable="d"
        Title="TaskGui" Height="300" Width="400" ResizeMode="CanMinimize" Loaded="Window_Loaded">
    <Grid>
        <Grid Height="35" VerticalAlignment="Top" Background="#FF00234F">
            <Label x:Name="lblTime" Content="16:53" Margin="0,6,7,5" Foreground="White" HorizontalAlignment="Right" Width="42"/>
        </Grid>
        <Grid Height="35" VerticalAlignment="Bottom">
            <Label x:Name="lblTaskName" Content="" Margin="0,6,0,5" HorizontalAlignment="Left" Width="197"/>
            <Label x:Name="lblTaskStatus" Content="" Margin="0,6,0,5" HorizontalAlignment="Right" Width="197" HorizontalContentAlignment="Right"/>
        </Grid>
        <Grid Margin="0,35">
            <Label x:Name="label" Content="請勿關閉或拔除電腦的電源" Margin="0,61,0,0" HorizontalContentAlignment="Center" VerticalAlignment="Top"/>
            <Label x:Name="label1" Content="Please do not power off or unplug your machine" Margin="0,86,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        </Grid>

    </Grid>
</Window>
